<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_view_logo_24"
        android:background="@drawable/border_logo"
        app:tint="@color/celadon"/>
    <TextView
        android:id="@+id/splashAppNmame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/splashLogo"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/splashCopyrights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splashLogo"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/developer"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20sp"/>




</RelativeLayout>